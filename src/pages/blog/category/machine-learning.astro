---
import Layout from '../../../layouts/Layout.astro';
import BlogPost from '../../../layouts/BlogPost.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const machineLearningPosts = allPosts.filter(post => post.data.category === "MachineLearning");
---

<Layout title="Machine Learning | Neural Diwan">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Machine Learning</h1>
    
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {machineLearningPosts.map((post) => <BlogPost post={post} />)}
    </div>

    {machineLearningPosts.length === 0 && (
      <p class="text-center text-gray-500">No posts found in this category.</p>
    )}
  </div>
</Layout>