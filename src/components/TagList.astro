---
// src/components/TagList.astro
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) => (
    <a 
      href={`/tags/${tag}`} 
      class="bg-gray-200 px-3 py-2 rounded-full text-sm text-gray-700 hover:bg-gray-300 transition duration-300 ease-in-out"
    >
      {tag}
    </a>
  ))}
</div>